{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noEmit": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@infra/*": ["infra/*"],
      "@core/": ["core/*"],
      "@config/*": ["config/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": ["src"]
}
